<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.xhu.biz.dao.UserDao">
    <insert id="insert"></insert>
    <update id="update"></update>
    <delete id="delete"></delete>
    <select id="queryRolesByUserName" resultType="cn.xhu.core.pojo.Role"></select>
    <select id="queryAllUsers" resultType="cn.xhu.core.pojo.User"></select>
    <select id="queryByCondition" resultType="cn.xhu.core.pojo.User" parameterType="cn.xhu.core.req.user.ReqUserVO">
        select id,user_name from user
        <where>
            1=1
            <if test="userName!='' and userName!=null">
                user_name=${userName}
            </if>

        </where>
    </select>
    <select id="queryById" resultType="cn.xhu.core.pojo.User"></select>
</mapper>